.order-banner{
  width: 100%;
  height: 304rpx;
}
.order-banner image{
  width: 100%;
  height: 100%;
  vertical-align: baseline;
}
.order-notice, .order-hint {
  position: relative;
  background: white;
  margin: 30rpx;
  border-radius: 10px;
  box-shadow: 0 0 5px 5px rgb(165 189 251 / 20%);
  padding: 60rpx 30rpx;
  box-sizing: border-box;
}
.order-notice {
  margin-top: 50rpx;
  padding-top: 106rpx;
  box-sizing: border-box;
}
.order-notice-title {
  height: 86rpx;
  width: 560rpx;
  margin-left: -280rpx;
  position: absolute;
  top: -24rpx;
  left: 50%;
}
.notice-title-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.order-notice-title>view{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  color: white;
  font-size: 30rpx;
  line-height: 86rpx;
  text-align: center;
  font-weight: bold;
  z-index: 2;
}
.order-form-input {
  position: relative;
  background: #EFEAFD;
  border: solid 1px #EDEDED;
  height: 80rpx;
  border-radius: 5px;
  padding-left: 160rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.order-form-btn {
  text-align: center;
  padding: 40rpx 0 20rpx;
  box-sizing: border-box;
}
.order-form-input label {
  background: #976FFF;
  color: white;
  position: absolute;
  left: 0;
  top: 0;
  height: 76rpx;
  line-height: 76rpx;
  width: 160rpx;
  font-size: 24rpx;
  text-align: center;
  box-sizing: border-box;
}
.order-form-input input {
  width: 100%;
  height: 76rpx;
  border: none;
  border-radius: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: transparent;
  font-size: 26rpx;
}
.order-form-btn button {
  width: 300rpx !important;
  height: 78rpx;
  border: none;
  border-radius: 18px;
  background: #976FFF;
  color: white;
  font-size: 28rpx;
  padding: 0;
  line-height: 78rpx;
}
.order-notice-text {
  color: #AFAFAF;
  font-size: 24rpx;
  line-height: 30rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.order-notice-text>text.text-1{
  color: #F50516;
}
.order-notice-submit {
  color: #976FFF;
  padding-top: 20rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  box-sizing: border-box;
}
.order-hint-imgbg{
  width: 100%;
  vertical-align: middle;
}
.order-hint-img{
  position: absolute;
  height: 120rpx;
  width: 556rpx;
  top: -74rpx;
  left: 10%;
}

