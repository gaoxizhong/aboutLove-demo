      <view class="lay-modal-ul">
        <view class="ul-items">
          <label class="lay-modal-form-label">位置:</label>
          <view class="select lay-modal-form-select">
            <view>{{ address }}</view>
          </view>
        </view>
        <view class="ul-items">
          <label class="lay-modal-form-label">性别</label>
