<view class="lay-modal">
  <view class="lay-modal-box">
    <view class="lay-modal-title">
      <text>抽到的信息</text>
    </view>
    <view class="lay-modal-form">
      <!-- <view class="upd-cover">
        <view class="upd-cover-input">
