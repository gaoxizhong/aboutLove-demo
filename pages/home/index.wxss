.poster-view-box{
  padding: 20rpx 0;
  box-sizing: border-box;
  width: 100%;
  height: 420rpx;
}
.poster-view-box swiper.swiper {
  width: 100%;
  height: 100%;
}

.poster-view-box swiper.swiper swiper-item.is_secl{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: auto;
  padding: 0 6rpx;
}
.poster-view-box swiper.swiper .swiper-item-view {
  width: 100%;
  height: 100%;
  padding: 2rpx;
  border-radius: 6px;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.scaleY-1{
  transform: scaleY(1);
  transition:  0.5s;
}
.scaleY-2 {
  transform: scaleY(0.9);
  transition: 0.5s;
}
.poster-view-box swiper.swiper .swiper-item-view image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}